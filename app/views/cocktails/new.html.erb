<div class="container">
  <div class="new-cocktail-form">
    <div class="row">
      <div class="col-xs-10 col-offset-xs-1 col-sm-4">
        <%= simple_form_for @cocktail do |f| %>
          <%= f.input :name %>
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>
          <%= f.submit 'Add a new cocktail', class: "btn btn-success list-inline" %>
        <% end %>
        <%= link_to "Cancel", cocktails_path, class: "btn btn-warning list-inline" %>
      </div>
    </div>
  </div>
</div>


